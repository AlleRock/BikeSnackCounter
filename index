<div class="nav-bar">
    <div class="nav-item active" id="nav-food" onclick="showPage('food')">Snack</div>
    <div class="nav-item" id="nav-water" onclick="showPage('water')">Acqua</div>
</div>

<script>
    let totalKcal = 0;
    let totalWater = 0;
    const snacks = [
        { id: 'focaccia', name: 'FOCACCIA', kcal: 320 },
        { id: 'pappone', name: 'PAPPONE', kcal: 119 },
        { id: 'smurfi', name: 'SMURFI', kcal: 135 },
        { id: 'bifi', name: 'BIFI', kcal: 108 }
    ];
    let counts = { focaccia: 0, pappone: 0, smurfi: 0, bifi: 0 };

    // Inserisce gli snack nella lista
    const listEl = document.getElementById('snack-list');
    snacks.forEach(s => {
        listEl.innerHTML += `
            <div class="row">
                <div><span style="font-weight:bold; font-size:1.1rem">${s.name}</span><br><small style="color:#aaa">${s.kcal} kcal</small></div>
                <div class="controls">
                    <button class="btn btn-minus" onclick="updateSnack('${s.id}', -1, ${s.kcal})">-</button>
                    <span class="counter-value" id="count-${s.id}">0</span>
                    <button class="btn btn-plus" onclick="updateSnack('${s.id}', 1, ${s.kcal})">+</button>
                </div>
            </div>`;
    });

    function showPage(p) {
        document.querySelectorAll('.page').forEach(el => el.classList.remove('active'));
        document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
        document.getElementById('page-' + p).classList.add('active');
        document.getElementById('nav-' + p).classList.add('active');
    }

    function updateSnack(id, delta, kcal) {
        if (delta === -1 && counts[id] <= 0) return;
        counts[id] += delta;
        totalKcal += (delta * kcal);
        document.getElementById('count-' + id).innerText = counts[id];
        document.getElementById('kcalDisplay').innerText = totalKcal;
    }

    function addWater() {
        const input = document.getElementById('waterInput');
        const val = parseInt(input.value);
        if (val > 0) {
            totalWater += val;
            document.getElementById('waterDisplay').innerText = totalWater;
            input.value = '';
            input.blur();
        }
    }

    function exportData() {
        if(confirm("Vuoi inviare il riepilogo a m8online@gmail.com?")) {
            const date = new Date().toLocaleDateString();
            const subject = `Riepilogo Giro Bici - ${date}`;
            
            let body = `DATI ATTIVITÃ€ - ${date}%0D%0A`;
            body += `---------------------------%0D%0A`;
            body += `TOTALE CALORIE: ${totalKcal} kcal%0D%0A`;
            body += `TOTALE ACQUA: ${totalWater} cl%0D%0A%0D%0A`;
            body += `DETTAGLIO CONSUMI:%0D%0A`;
            
            let hasFood = false;
            for(let key in counts) {
                if(counts[key] > 0) {
                    body += `- ${key.toUpperCase()}: ${counts[key]} pezzi%0D%0A`;
                    hasFood = true;
                }
            }
            if(!hasFood) body += "Nessun cibo consumato.%0D%0A";
            
            window.location.href = `mailto:m8online@gmail.com?subject=${encodeURIComponent(subject)}&body=${body}`;
        }
    }

    function resetAll() {
        if(confirm("ATTENZIONE: vuoi azzerare tutti i dati del giro attuale?")) {
            totalKcal = 0; totalWater = 0;
            for (let key in counts) counts[key] = 0;
            document.getElementById('kcalDisplay').innerText = "0";
            document.getElementById('waterDisplay').innerText = "0";
            document.querySelectorAll('.counter-value').forEach(el => el.innerText = "0");
        }
    }
</script>

</body>
