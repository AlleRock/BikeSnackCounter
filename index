<div class="card">
    <div class="display-kcal">
        <h2>Kcal Totali Assunte</h2>
        <div class="total" id="totalDisplay">0</div>
    </div>

    <div class="snack-list">
        <div class="snack-row">
            <div class="snack-info">
                <span class="snack-name">FOCACCIA</span>
                <span class="snack-kcal">320 kcal</span>
            </div>
            <div class="controls">
                <button class="btn btn-minus" onclick="updateSnack('focaccia', -1, 320)">-</button>
                <span class="counter-value" id="count-focaccia">0</span>
                <button class="btn btn-plus" onclick="updateSnack('focaccia', 1, 320)">+</button>
            </div>
        </div>

        <div class="snack-row">
            <div class="snack-info">
                <span class="snack-name">PAPPONE</span>
                <span class="snack-kcal">119 kcal</span>
            </div>
            <div class="controls">
                <button class="btn btn-minus" onclick="updateSnack('pappone', -1, 119)">-</button>
                <span class="counter-value" id="count-pappone">0</span>
                <button class="btn btn-plus" onclick="updateSnack('pappone', 1, 119)">+</button>
            </div>
        </div>

        <div class="snack-row">
            <div class="snack-info">
                <span class="snack-name">SMURFI</span>
                <span class="snack-kcal">135 kcal</span>
