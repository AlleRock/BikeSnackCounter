<div class="container">
    <div id="page-food" class="page active">
        <div class="display">
            <h2>Kcal Cibo Totali</h2>
            <div class="val" id="kcalDisplay">0</div>
        </div>
        <div id="snack-list"></div>
    </div>

    <div id="page-water" class="page">
        <div class="display water">
            <h2>Liquidi Totali (cl)</h2>
            <div class="val" id="waterDisplay">0</div>
        </div>
        <div class="row">
            <span style="font-weight:bold">AGGIUNGI CL</span>
            <div class="controls">
                <input type="number" id="waterInput" class="input-water" placeholder="cl" inputmode="numeric">
                <button class="btn btn-add-water" onclick="addWater()">OK</button>
            </div>
        </div>
    </div>

    <div class="actions">
        <button class="btn-export" onclick="exportData()">ðŸš€ ESPORTA RIEPILOGO UNICO</button>
        <button class="btn-reset" onclick="resetAll()">â†º AZZERA TUTTA LA SESSIONE</button>
    </div>
