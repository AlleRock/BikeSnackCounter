            <div class="controls">
                <button class="btn btn-minus" onclick="updateSnack('bifi', -1, 108)">-</button>
                <span class="counter-value" id="count-bifi">0</span>
                <button class="btn btn-plus" onclick="updateSnack('bifi', 1, 108)">+</button>
            </div>
        </div>
    </div>

    <button class="btn-reset" onclick="resetAll()">â†º Azzera Tutto</button>
</div>

<script>
    let totalKcal = 0;
    let counts = { focaccia: 0, pappone: 0, smurfi: 0, bifi: 0 };

    function updateSnack(id, delta, kcal) {
        if (delta === -1 && counts[id] <= 0) return; // Non andare sotto zero
        
        counts[id] += delta;
        totalKcal += (delta * kcal);
        
        document.getElementById('count-' + id).innerText = counts[id];
        document.getElementById('totalDisplay').innerText = totalKcal;
    }

    function resetAll() {
        if(confirm("Vuoi azzerare il giro?")) {
            totalKcal = 0;
            for (let key in counts) counts[key] = 0;
            
            document.getElementById('totalDisplay').innerText = "0";
            document.querySelectorAll('.counter-value').forEach(el => el.innerText = "0");
        }
    }
</script>

